#menu-toggle {
  display: none;
  background-color: transparent;
  outline: none;

  @media mq.mobileMenu {
    display: block;
    border: 0;
    box-shadow: none;
  }

  .hamburger_wrapper {
    text-align: right;
    width: 30px;
    height 30px
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    cursor: pointer;

    .hamburger {
      position: relative;
      background-color: colors.black;
      height: 3px;
      width: 100%
      transition: all 300ms ease;

      &:before,
      &:after {
        position: absolute;
        top: 0;
        right: 0;
        content: '';
        background-color: colors.black;
        height: 3px;
        width: 100%
        transition: all 200ms ease;
      }
      &:before {
        transform: translateY(-16px);
        transition: all 200ms ease;
      }
      &:after {
        transform: translateY(-8px);
        transition: all 200ms ease;
      }
    }

    &:hover {
      .hamburger {
        width:100%;

        &:before {
          transform: translateY(-20px);
        }
        &:after {
          transform: translateY(-10px);
        }
      }
    }
    
    .open & {
      .hamburger {
        transform: rotate(-45deg) translate(8px, -8px);

        &:before {
          transform: rotate(90deg) translateY(0);
        }
        &:after {
          opacity:0;
          transform: rotate(45deg) translate(8px, -8px);
        }
      }
    }
  }
}

.menu-main-menu-fi-container {
  height 100%; 
  @media mq.mobileMenu {
    width 100%;
  }
}
#primary-navigation {
  overflow: visible;

  @media mq.mobileMenu {
    display: none;
    .open & {
      display: flex;
    }

    width: 100vw;
    position: absolute;
    top: 115px;
    left:0;
    z-index: 120;
    background-color: colors.white;
    flex-wrap: wrap;
    padding: 0;
    height auto;

  }
}
