h1, h2, h3, h4, h5, h6, p {
  font-family: fonts.sans;

  // Disable defaults
  margin: 0;
  padding: 0;
  margin-bottom: 25px; // Prefer using margin-bottom over top.
  white-space: normal;
  word-wrap: break-word;
  word-break: break-word;

  line-height: 1.4;
}

h1 {
  font-size: 60px;
  line-height: 1.5;
}

h2 {
  font-size: 40px;
}

h3 {
  font-size: 30px;
}

h4 {
  font-size: 25px;
}

h5 {
  font-size: 20px;
}

h6 {
  font-size: 18px;
}

a {
  text-decoration: none;
}

ul, ol {
  margin: 0;
  padding: 0;
  margin: 0 25px 25px 25px;

  ul, ol {
    // Nested lists shouldn't look weird.
    margin-bottom: 0;
  }
}
